<section class="text-gray-600 body-font relative">
  <div class="container px-5 py-8 mx-auto">
    <div class="flex flex-col text-center w-full mb-8">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">新規投稿</h1>
    </div>
    <div class="lg:w-1/2 md:w-2/3 mx-auto">
      <div class="flex flex-wrap -m-2">
        <%= form_with(model: @episode) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="p-2 w-full">
            <div class="relative">
              <label class="leading-7 text-base text-gray-600">タイトル</label>
              <%= f.text_field :title, class:"input input-bordered input-info w-full bg-white", placeholder: "タイトルを入力" %>
            </div>
          </div>
          <div class="p-2 w-full">
            <div class="relative">
              <label for="message" class="leading-7 text-base text-gray-600">内容</label>
              <%= f.text_area :content, class:"textarea textarea-bordered textarea-lg textarea-info w-full bg-white",placeholder: "エピソードを入力" %>
          </div>
          <div tabindex="0" class="collapse collapse-arrow border border-base-300 bg-white rounded-box my-4">
            <input type="checkbox" /> 
            <div class="collapse-title text-xl font-medium">
              資質を選択する (2つまで)
            </div>
            <div class="collapse-content"> 
              <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name, { include_hidden: false }) do |tag| %>
                <%= render 'tags/containing_element', tag: tag %>
                <%= tag.check_box %>
                <%= tag.text %>
              <% end %>
            </div>
          </div>  
          <div class="p-2 w-full">
            <%= f.submit "投稿", class: "btn btn-primary flex mx-auto py-2 px-8 text-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>