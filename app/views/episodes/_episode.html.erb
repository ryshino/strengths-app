<li id="episode-<%= episode.id %>">
  <div class="w-10 rounded-full">
    <% if episode.user.profile_icon.attached? %>
      <%= image_tag episode.user.profile_icon %>
    <% else %>
      <%= image_tag("no_image.jpg", alt: "no_image") %>
    <% end %>
  </div>
  <span class="user"><%= link_to episode.user.name, episode.user %></span>
  <span class="content">

    <%= link_to episode_path(episode) do %>
      <%=  episode.title %>
    <% end %>
    <br>
    <%# ↓はヘルパーメソッドに定義している %>
    <%=  html_safe_newline(episode.content) %>

  </span>
  <% episode.tags.each do |tag| %>
    <span><%= tag.name %></span>
  <% end %>
  <span class="timestamp">
    Posted <%= time_ago_in_words(episode.created_at) %> ago.
    <% if current_user.admin? || current_user?(episode.user) %>
      <%= link_to "削除", episode, data: { "turbo-method": :delete,turbo_confirm: "投稿を削除します" } %>
    <% end %>
  </span>
</li>