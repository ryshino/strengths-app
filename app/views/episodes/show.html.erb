<% provide(:title, 'エピソード') %>
<section class="text-gray-600 body-font">
  <div class="container px-5 py-12 mx-auto flex flex-wrap">
    <div class="flex flex-wrap w-full">
      <div class="lg:w-1/2 px-4 mb-8">
        <div class="flex flex-wrap w-full">
          <div class="flex w-2/3 px-4">
            <div class="avatar">
              <div class="w-24 rounded-full">
                <% if @episode.user.profile_icon.attached? %>
                  <%= image_tag @episode.user.profile_icon %>
                <% else %>
                  <%= image_tag("no_image.jpg", alt: "no_image") %>
                <% end %>
              </div>
            </div>
            <p class="text-2xl font-bold px-4 py-8"><%= @episode.user.name %></p>
          </div>
          <%
=begin%>
<div class="w-1/3 px-4 py-8">
            <% unless @episode.user == current_user %>
              <%= render 'users/follow_form', user: @episode.user %>
            <% end %>
          </div> 
<%
=end%>
        </div>
        <%
=begin%>
<div class="flex flex-wrap w-full justify-center">
          <%= render 'shared/stats' %>
        </div> 
<%
=end%>
        <div class="card card-side bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="flex flex-wrap">
              <p class="card-title text-lg my-8">資質一覧</p>
              <% if @episode.user.strength_image.attached? %>
                <%= image_tag @episode.user.strength_image %>
              <% else %>
                <%= image_tag("no_image.jpg", alt: "no_image") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="lg:w-1/2 w-full px-4">
        <div class="card card-side bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="flex flex-wrap">
              <p class="card-title text-xl my-8"><%= @episode.title %></p>
            </div>
            <div class="flex flex-wrap">
              <p class="card-title text-lg my-8"><%= @episode.content %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>