<% provide(:title, @user.name) %>
<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto flex flex-wrap">
    <div class="flex flex-wrap w-full">
      <div class="lg:w-1/2 w-full px-4 mb-8">
        <div class="card card-side bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="flex flex-wrap">
              <div class="w-1/3">
                <label tabindex="0" class="avatar">
                  <div class="w-12 rounded-full">
                    <% if @user.profile_icon.attached? %>
                      <%= image_tag @user.profile_icon %>
                    <% else %>
                      <%= image_tag("no_image.jpg", alt: "no_image") %>
                    <% end %>
                  </div>
                </label>
              </div>
              <div class="w-2/3">
                <h2 class="card-title"><%= @user.name %></h2>
              </div>
              <div class="card-actions justify-end">
                <% unless @user == current_user %>
                  <button class="btn btn-outline btn-primary my-4">フォロー</button>
                <% end %>
              </div>
              <% if @user.strength_image.attached? %>
                <%= image_tag @user.strength_image %>
              <% else %>
                <%= image_tag("no_image.jpg", alt: "no_image") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="lg:w-1/2 w-full px-4">
        <div class="flex flex-wrap -m-4">
          <% if @episodes.any? %>
            <% @episodes.each do |episode| %>
              <div class="xl:w-1/2 w-96 p-4">
                <div class="card card-side bg-base-100 shadow-xl">
                  <div class="card-body">
                    <div class="flex flex-wrap">
                      <div class="w-1/3">
                        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
                          <div class="w-12 rounded-full">
                            <% if episode.user.profile_icon.attached? %>
                              <%= link_to user_path(episode.user) do %>
                                <%= image_tag episode.user.profile_icon %>
                              <% end %>
                            <% else %>
                              <%= link_to user_path(episode.user) do %>
                                <%= image_tag("no_image.jpg", alt: "no_image") %>
                              <% end %>
                            <% end %>
                          </div>
                        </label>  
                      </div>
                      <div class="w-2/3">
                        <h2 class="card-title link link-hover"><%= link_to "#{episode.title}", episode_path(episode) %></h2>
                      </div>
                    </div>
                    <p><%=  html_safe_newline(episode.content) %></p>
                    <div class="card-actions justify-end">
                      <%= link_to "詳細ページへ", episode_path(episode), class:"btn btn-outline btn-primary" %>
                      <% if current_user.admin? || current_user?(episode.user) %>
                        <%= link_to "削除", episode, data: { "turbo-method": :delete,turbo_confirm: "投稿を削除します" }, class:"btn btn-outline btn-primary" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>


<div class="fixed bottom-8 right-8">
  <!-- The button to open modal -->
  <label for="my-modal" class="btn">open modal</label>

  <!-- Put this part before </body> tag -->
  <input type="checkbox" id="my-modal" class="modal-toggle" />
  <div class="modal">
    <div class="modal-box">
      <h3 class="font-bold text-lg">Congratulations random Internet user!</h3>
      <p class="py-4">You've been selected for a chance to get one year of subscription to use Wikipedia for free!</p>
      <div class="modal-action">
        <label for="my-modal" class="btn">Yay!</label>
      </div>
    </div>
  </div>  
</div>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <div class="w-10 rounded-full">
          <% if @user.profile_icon.attached? %>
            <%= image_tag @user.profile_icon %>
          <% else %>
            <%= image_tag("no_image.jpg", alt: "no_image") %>
          <% end %>
        </div>
        <div class="w-40 rounded-full">
          <% if @user.strength_image.attached? %>
            <%= image_tag @user.strength_image %>
          <% else %>
            <%= image_tag("no_image.jpg", alt: "no_image") %>
          <% end %>
        </div>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.episodes.any? %>
      <h3>episodes (<%= @user.episodes.count %>)</h3>
      <ol class="episodes">
        <%= render @episodes %>
      </ol>
      <%= will_paginate @episodes %>
    <% end %>
  </div>
</div>